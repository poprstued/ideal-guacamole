JS


const mainTitle = document.querySelector('h1')
const changecolor = document.querySelector('#changecolorinp')
const btn = document.querySelector('button')
const title =document.querySelector ('changetitleinp')

function changeColor(kolor){
    mainTitle.style.color = kolor
}

function changetitle(tytuł){
    title.textContent = tytuł

}

btn.addEventListener('click', function(){
    changeColor(changecolorinp.value)
    this.style.backgroundColor = '#35f'
    changetitle(changetitleinp.value)
})










